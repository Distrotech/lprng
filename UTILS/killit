#
###########################################################################
# MODULE: UTILS/killit
# PURPOSE: find and kill the LPD daemon... sigh
# $Id: killit,v 3.1 1996/12/28 21:40:52 papowell Exp $
########################################################################## 
ps -x >/tmp/$$
cat /tmp/$$
V=`cat /tmp/$$ |grep lpd | awk '{ print $1 }' | sort -n | tail -1`
echo $V
kill -INT $V
